<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/NBAListFragment">

    <fragment
        android:id="@+id/NBAListFragment"
        android:name="com.example.projetesiea.presentation.list.NBAListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_shoes_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.projetesiea.presentation.list.detail.PlayersDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="playersId"
            app:argType="integer"
            android:defaultValue="-1"/>
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/NBAListFragment" />
    </fragment>
</navigation>